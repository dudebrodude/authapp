<!-- Button trigger modal -->
<button class="btn btn-primary" data-toggle="modal" data-target="#myModal">
 <%= fa_icon 'check-circle' %> Check in
</button>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= gravatar_for(current_user, size: 40) %>
            <p class="user">
             <strong><%= current_user.name %></strong>
           </p>
           <p class="location">
            <%= fa_icon 'globe' %> <%= current_user.location %>
          </p>
        </div>
        <div class="panel-body">
          <span class="content">I just checked in at <%= @club.name %> </span>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
      <button type="button" class="btn btn-primary">Check in</button>
    </div>
  </div>
</div>
</div>