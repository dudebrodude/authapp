<% if signed_in? %>
<div class="row">
  <aside class="col-sm-3">
    <section>
      <%= render 'shared/user_info' %>
    </section>

    <section>
     <%= render 'users/buddy_list' %>
   </section>
       <section>
      <%= render 'shared/points' %>
    </section>
 </aside> 
 <div class="col-sm-9">
   <%= render 'shared/feed' %>
 </div>

</div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome</h1>
  <h2>
    Choose an option below to get started!
  </h2>
  <%= link_to "Sign In", signin_path , class: "btn btn-large btn-primary" %>
  <%= link_to "Register", signup_path , class: "btn btn-large btn-default" %>
</div>
<% end %>



