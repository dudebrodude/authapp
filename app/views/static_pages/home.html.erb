<% if signed_in? %>
<div class="row">
  <aside class="col-sm-4">
    <section>
      <%= render 'shared/user_info' %>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <section>
      <%= render 'shared/micropost_form' %>
    </section>
  </aside> 
  <div class="col-sm-8">
    <h3>Recent Activity</h3>
    <%= render 'shared/feed' %>
  </div>
</div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Streemfeed</h1>
  <h2>
    Choose an option below to get started!
  </h2>
  <%= link_to "Sign In", signin_path , class: "btn btn-large btn-primary" %>
  <%= link_to "Register", signup_path , class: "btn btn-large btn-default" %>
</div>
<% end %>



